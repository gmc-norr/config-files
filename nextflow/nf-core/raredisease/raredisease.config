// vim: ft=groovy syntax=nextflow

includeConfig "../rv.config"

params {
    bwamem2 = "${params.igenomes_base}/Homo_sapiens/NCBI/GRCh38/Sequence/bwamem2Index"
    intervals_wgs = "${NEXTFLOW_CONFIG_HOME}/nf-core/assets/GRCh38_chr1-chr22chrXchrYchrM.interval_list"
    intervals_y = "${NEXTFLOW_CONFIG_HOME}/nf-core/assets/GRCh38_chrY.interval_list"
    variant_catalog = "${NEXTFLOW_CONFIG_HOME}/nf-core/assets/raredisease/disease_loci/ExpansionHunter-v5.0.0/variant_catalog_grch38.json"
    vcfanno_toml = "${NEXTFLOW_CONFIG_HOME}/nf-core/assets/raredisease/vcfanno/vcfanno.toml"
    vcfanno_resources = "${NEXTFLOW_CONFIG_HOME}/nf-core/assets/raredisease/vcfanno/vcfanno_resources.txt"
    score_config_mt = "${NEXTFLOW_CONFIG_HOME}/nf-core/assets/raredisease/genmod/rare_disease_rank_model_0.1.ini"
    score_config_snv = "${NEXTFLOW_CONFIG_HOME}/nf-core/assets/raredisease/genmod/rare_disease_rank_model_0.1.ini"
    // score_config_sv: "${NEXTFLOW_CONFIG_HOME}/nf-core/assets/rare_disease/genmod/rare_disease_rank_model_sv_0.1.ini"
    variant_consequences_snv = "${NEXTFLOW_CONFIG_HOME}/nf-core/assets/variant_consequences.txt"
    variant_consequences_sv = "${NEXTFLOW_CONFIG_HOME}/nf-core/assets/variant_consequences.txt"
    vep_filters = "${NEXTFLOW_CONFIG_HOME}/nf-core/assets/raredisease/clinical_hgnc.txt"
    vep_plugin_files = "${NEXTFLOW_CONFIG_HOME}/nf-core/assets/raredisease/vep_plugin_files.csv"
}

// VEP filtering is broken, so skip it for now until VEP 113 has been released
skip_vep_filter = true

process {
    withName: 'NFCORE_RAREDISEASE:RAREDISEASE:ANNOTATE_GENOME_SNVS:VCFANNO' {
        cpus = 12
    }

    withName: 'NFCORE_RAREDISEASE:RAREDISEASE:CALL_SNV:CALL_SNV_DEEPVARIANT:DEEPVARIANT' {
        cpus = 32
    }
    withName: 'NFCORE_RAREDISEASE:RAREDISEASE:ANNOTATE_GENOME_SNVS:ENSEMBLVEP_SNV' {
        ext.args = { [
            '--appris',
            '--biotype',
            '--buffer_size 20000',
            '--cache',
            '--canonical',
            '--ccds',
            '--check_existing',
            '--compress_output bgzip',
            '--custom clinvar/clinvar_20240819.vcf.gz,CLINVAR,vcf,exact,0,CLNSIG,CLNREVSTAT',
            '--dir_plugins /storage/userdata/references/vep/Plugins',
            '--distance 5000',
            '--domains',
            '--exclude_predicted',
            '--force_overwrite',
            '--format vcf',
            '--hgvs',
            '--humdiv',
            '--max_sv_size 248956422',
            '--merged',
            '--no_progress',
            '--numbers',
            '--offline',
            '--plugin dbNSFP,dbNSFP4.9a/dbNSFP4.9a_grch38.gz,GERP++_RS,phastCons100way_vertebrate,phyloP100way_vertebrate',
            '--plugin LoFtool,LoFtool_scores.txt',
            '--plugin MaxEntScan,MaxEntScan,SWA',
            '--plugin pLI,pLI_values.txt',
            '--plugin REVEL,file=revel-v1.3/revel_with_transcript_ids_grch38.tsv.gz',
            '--plugin SpliceAI,snv=spliceai_1.3/spliceai_scores.raw.snv.hg38.vcf.gz,indel=spliceai_1.3/spliceai_scores.raw.indel.hg38.vcf.gz',
            '--polyphen p',
            '--protein',
            '--regulatory',
            '--sift p',
            '--symbol',
            '--tsl',
            '--uniprot',
            '--vcf',
        ].join(' ') }
        cpus = 8
    }
}
